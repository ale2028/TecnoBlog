@model TecnoBlog.Business.Models.Article

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

        <dt>
            Tags
        </dt>

        <dd>
            @Html.Action("Index", "Tag", new { articleId = Model.Id })
        </dd>
    </dl>
    <hr />
    <img src="https://www.elstonallsaints.notts.sch.uk/_images/397437_l.jpg" width="100%" />
    <br />
    <br />
    @Html.Raw(Model.Content)
    <div name="comments" style="padding: 3em;">
        <hr />
        <h3>Comments</h3>
        <br />
        @Html.Action("Index", "Comment", new { articleId = Model.Id })
        <hr />
        @if (User.Identity.IsAuthenticated)
        {
            @Html.Action("Create", "Comment", new { articleId = Model.Id })
        }
    </div>
    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index", "Home")
</p>

