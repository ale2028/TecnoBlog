@model IEnumerable<TecnoBlog.Business.Models.Comment>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading" style="color:whitesmoke; font-weight: bold;"> 
                    [@item.Created.ToShortDateString()] @Html.DisplayFor(modelItem => item.UserName) Commented: 
                </div>
                <div class="panel-body" style="color:whitesmoke; font-weight: bold;">
                    @Html.Raw(item.Content)
                </div>
            </div>
        </div>
    }
</div>



