@model IEnumerable<TecnoBlog.Business.Models.Tag>
<div class="row">
    <div class="col-lg-12" style="padding:1em;">
        <h3>Tags</h3>
        <hr />
        @foreach (var item in Model)
        {
            <a href="@Url.Action("ArticlesByTag","Tag", new { tag = item.Name})">
                <span class="label label-info">
                    @item.Name.ToUpper()
                </span>
            </a>
            <span>&nbsp;</span>
        }
    </div>
</div>